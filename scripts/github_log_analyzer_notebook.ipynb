# Cell 2: Import libraries
import io
import re
import json
import warnings
from collections import Counter

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import plotly.express as px
import plotly.graph_objects as go

import ipywidgets as widgets
from IPython.display import display, HTML, clear_output

warnings.filterwarnings("ignore")

# Cell 3: Analyzer logic (WORKING)
IP_RE = re.compile(r"\b(?:\d{1,3}\.){3}\d{1,3}\b")
FAILED_RE = re.compile(r"(failed password|authentication failure|invalid user|login failed)", re.I)

def _auto_detect_type(text: str) -> str:
    s = text.lstrip()
    if s.startswith("{") or s.startswith("["):
        return "json"
    first_line = text.splitlines()[0] if text.splitlines() else ""
    if "," in first_line:
        return "csv"
    return "text"

def _is_suspicious(line: str) -> bool:
    low = line.lower()
    if FAILED_RE.search(line):
        return True
    if "../" in line or "..\\" in line:
        return True
    if "sql" in low and ("select" in low or "union" in low or "' or 1=1" in low):
        return True
    if "<script" in low or "javascript:" in low:
        return True
    return False

def _to_lines_and_df(text: str, detected: str):
    df = None
    lines = []

    if detected == "json":
        obj = json.loads(text)

        if isinstance(obj, list) and (len(obj) == 0 or isinstance(obj[0], dict)):
            df = pd.DataFrame(obj)
            lines = df.astype(str).agg(" | ".join, axis=1).tolist()
        elif isinstance(obj, dict):
            df = pd.DataFrame([obj])
            lines = [json.dumps(obj)]
        else:
            lines = [json.dumps(obj)]
    elif detected == "csv":
        df = pd.read_csv(io.StringIO(text))
        lines = df.astype(str).agg(" | ".join, axis=1).tolist()
    else:
        lines = text.splitlines()

    return lines, df

def analyze_github_logs_bytes(content: bytes, log_type_choice: str = "auto"):
    text = content.decode("utf-8", errors="replace")

    detected = log_type_choice if log_type_choice != "auto" else _auto_detect_type(text)
    lines, df = _to_lines_and_df(text, detected)

    ip_counter = Counter()
    status_counter = Counter()
    failed_count = 0
    suspicious_count = 0
    total = 0

    status_pat = re.compile(r"\b(1\d{2}|2\d{2}|3\d{2}|4\d{2}|5\d{2})\b")

    for raw in lines:
        line = str(raw).strip()
        if not line:
            continue
        total += 1

        for ip in IP_RE.findall(line):
            ip_counter[ip] += 1

        for code in status_pat.findall(line):
            status_counter[code] += 1

        if FAILED_RE.search(line):
            failed_count += 1

        if _is_suspicious(line):
            suspicious_count += 1

    summary = {
        "detected_type": detected,
        "total_records": total,
        "unique_ips": len(ip_counter),
        "failed_login_lines": failed_count,
        "suspicious_lines": suspicious_count,
    }

    details = {
        "top_ips": ip_counter.most_common(10),
        "status_counts": dict(status_counter),
    }

    return summary, details, df, lines

# Cell 4: Create interactive widgets
file_upload = widgets.FileUpload(
    description="Upload Log File",
    multiple=False
)

log_type = widgets.Dropdown(
    options=["auto", "json", "csv", "text"],
    value="auto",
    description="Log Type:"
)

analyze_button = widgets.Button(
    description="Analyze Logs",
    button_style="success",
    icon="search"
)

output = widgets.Output()

# Cell 5: Display widgets
display(widgets.VBox([
    widgets.HBox([file_upload, log_type]),
    analyze_button,
    output
]))

# Cell 6: Event handler for analyze button (WORKING)
def on_analyze_click(_):
    with output:
        clear_output()

        if not file_upload.value:
            print("Please upload a log file first!")
            return

        name, file_info = next(iter(file_upload.value.items()))
        content = file_info["content"]

        print(f"Analyzing {name}...")
        summary, details, df, lines = analyze_github_logs_bytes(content, log_type.value)

        display(HTML("<h3>Summary</h3>"))
        display(pd.DataFrame([summary]))

        top_ips = details.get("top_ips", [])
        status_counts = details.get("status_counts", {})

        if top_ips:
            display(HTML("<h3>Top IPs</h3>"))
            top_ips_df = pd.DataFrame(top_ips, columns=["ip", "count"])
            fig = px.bar(top_ips_df, x="ip", y="count", title="Top IPs")
            fig.show()

        if status_counts:
            display(HTML("<h3>Status Codes</h3>"))
            status_df = pd.DataFrame(sorted(status_counts.items()), columns=["status", "count"])
            fig2 = px.bar(status_df, x="status", y="count", title="Status Codes")
            fig2.show()

        display(HTML("<h3>Preview</h3>"))
        if df is not None:
            display(df.head(10))
        else:
            for ln in lines[:10]:
                print(ln)

analyze_button.on_click(on_analyze_click)
